{
	"name": "nodejs-starter",
	"version": "1.3.0",
	"private": true,
	"main": "index.js",
	"scripts": {
		"build:js": "cross-env NODE_ENV=production browserify -g envify -p [ vueify/plugins/extract-css -o src/css/vue.css ] -e src/js/client.js -o public/js/app.js",
		"postbuild:js": "uglifyjs public/js/app.js -c -m -o public/js/app.js",
		"dev:js": "watchify -vd -p browserify-hmr -e src/js/client.js -o public/js/app.js",
		"prebuild:css": "stylus src/css/app.styl --include-css -o public/css/app.css",
		"build:css": "postcss public/css/app.css --use autoprefixer -o public/css/app.css",
		"postbuild:css": "yuicompressor public/css/app.css -o public/css/app.css",
		"dev:css": "stylus src/css/app.styl --include-css --watch -o public/css/app.css",
		"build": "run-s build:js build:css",
		"dev": "run-p dev:js dev:css",
		"fast": "run-s fast:js prebuild:css",
		"fast:js": "browserify -p [ vueify/plugins/extract-css -o src/css/vue.css ] -e src/js/client.js -o public/js/app.js"
	},
	"browserify": {
		"transform": [
			"babelify",
			"vueify"
		]
	},
	"browser": {
		"vue": "vue/dist/vue.common.js"
	},
	"dependencies": {
		"@fortawesome/fontawesome": "^1.1.5",
		"@fortawesome/fontawesome-free-solid": "^5.0.9",
		"@fortawesome/vue-fontawesome": "^0.0.22",
		"axios": "^0.18.0",
		"bluebird": "^3.5.1",
		"body-parser": "~1.18.2",
		"chart.js": "^2.7.2",
		"compression": "^1.7.2",
		"connect-history-api-fallback": "^1.5.0",
		"connect-mongo": "^2.0.0",
		"cookie-parser": "^1.4.3",
		"debug": "~3.1.0",
		"dotenv": "^5.0.0",
		"email-validator": "^1.1.1",
		"errorhandler": "^1.5.0",
		"express": "~4.16.2",
		"express-session": "^1.15.6",
		"font-awesome": "^4.7.0",
		"foundation-emails": "^2.2.1",
		"foundation-sites": "^6.4.4-rc1",
		"html-minifier": "^3.5.9",
		"jcanvas": "^21.0.0",
		"jquery": "^3.3.1",
		"juice": "^4.2.2",
		"lusca": "^1.5.2",
		"moment": "^2.21.0",
		"mongoose": "^5.0.7",
		"morgan": "~1.9.0",
		"multer": "^1.3.0",
		"nodemailer": "^4.6.0",
		"parallax.js": "^0.1.0",
		"passport": "^0.4.0",
		"passport-local": "^1.0.0",
		"pug": "^2.0.0-rc.4",
		"serve-favicon": "^2.4.5",
		"socket.io": "^2.0.4",
		"socket.io-client": "^2.0.4",
		"stylus": "0.54.5",
		"supports-color": "^5.2.0",
		"typed.js": "^2.0.6",
		"uuid": "^3.1.0",
		"vue": "^2.5.13",
		"vue-chartjs": "^3.2.1",
		"vue-cookie": "^1.1.4",
		"vue-i18n": "^7.4.2",
		"vue-parallaxy": "^1.1.1",
		"vue-router": "^3.0.1",
		"vuetable-2": "^1.7.5"
	},
	"devDependencies": {
		"autoprefixer": "^8.0.0",
		"babel-core": "^6.26.0",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-preset-env": "^1.6.1",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-stage-2": "^6.24.1",
		"babelify": "^8.0.0",
		"browserify": "^16.1.0",
		"browserify-hmr": "^0.3.6",
		"cross-env": "^5.1.3",
		"envify": "^4.1.0",
		"eslint": "^4.18.1",
		"eslint-config-airbnb-base": "^12.1.0",
		"eslint-plugin-import": "^2.9.0",
		"eslint-plugin-pug": "^1.1.1",
		"npm-run-all": "^4.1.2",
		"postcss": "^6.0.14",
		"postcss-cli": "^5.0.0",
		"uglify-js": "^3.2.2",
		"vueify": "^9.4.1",
		"watchify": "3.10.0",
		"yuicompressor": "^2.4.8"
	}
}
